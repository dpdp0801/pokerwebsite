datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  role      Role     @default(PLAYER)
  createdAt DateTime @default(now())
}

enum Role {
  PLAYER
  ADMIN
}